@model ProductSearchResult
@{
    Layout = null;
}
<p style="margin-top:10px">
    Có <strong>@Model.RowCount</strong> mặt hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width:100px">Ảnh</th>
                <th style="width:auto">Tên mặt hàng</th>
                <th style="width:100px">Đơn vị tính</th>
                <th style="width:120px">Giá</th>
                <th style="width:120px">Đang được bán</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td><img class="~/img-responsive img-bordered" alt="no-photo" style="width:80px" src="~/images/products/@(string.IsNullOrWhiteSpace(item.Photo) ? "nophoto.png" : item.Photo)"></td>
                    <td>@item.ProductName</td>
                    <td>@item.Unit</td>
                    <td>@item.Price.ToString("N0")</td>
                    <td>@item.IsSelling</td>
                    <td class="text-right">
                        <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.PageCount > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                }
            }
        </ul>
    </div>
}