@model SupplierSearchResult
@{
    Layout = null;
}
<p style="margin-top:10px">
    Có <strong>@Model.RowCount</strong> Nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width=100px">Logo</th>
                <th style="width:auto">Tên Nhà cung cấp</th>
                <th style="width=100px">>Tên liên lạc</th>
                <th style="width=100px">>Điện thoại</th>
                <th style="width=100px">>Email</th>
                <th style="width=100px">>Địa chỉ</th>
                <th style="width=100px">>Tỉnh thành</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td><img class="~/img-responsive img-bordered" alt="no-photo" style="width:80px" src="~/images/suppliers/@(string.IsNullOrWhiteSpace(item.Logo) ? "nophoto.png" : item.Logo)"></td>
                    <td>@item.SupplierName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Province</td>
                    <td class="text-right">
                        <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.PageCount > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                }
            }
        </ul>
    </div>
}